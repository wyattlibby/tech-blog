<section>
    <h2>Create New Post</h2>

    <form class='new-post-form'>
        <div>
            <label for='post-title'></label>
            <input type='text' id='post-title' placeholder='Title' name='post-title'/>
        </div>
        <div>
            <textarea name='post-text' placeholder='Create Post ' rows='8'></textarea>
        </div>
        <button type='submit' class='btn-primary'>Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src='/javascript/add-post.js'></script>